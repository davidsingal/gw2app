// put your stylus code here
$dark = #111
$light = #fcfcfc

boder-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments

gradient(start, end)
	background-color end
	background-image -webkit-gradient(linear, left top, left bottom, from(start), to(end))
	background-image -webkit-linear-gradient(top, start, end)
	background-image -moz-linear-gradient(top, start, end)
	background-image -o-linear-gradient(top, start, end)
	background-image -ms-linear-gradient(top, start, end)
	background-image linear-gradient(top, start, end)

// Common
html, button, input, select, textarea
	color $dark
	
body
	font-size 1em
	line-height 1.4
	background $light

nav ul
	display block
	list-style none
	margin 0
	padding 0

nav li
	display inline-block
	
a, a:link, a:visited
	color $dark
	text-decoration none
	
// Header
.main_header
	padding .5em 1em
	gradient(#222, #000)
	a
		color $light

.logo
	float left
	font-size 1em
	margin 0
	a
		display block

.main_nav
	float right
	
// Content
.main_content
	position absolute
	top 2.4em
	left 0
	right 0
	bottom 1.52em
	background #f6f6f6

.map
	position absolute
	top 0
	left 0
	width 100%
	height 100%

// Footer
.main_footer
	position absolute
	left 0
	right 0
	bottom 0
	padding .2em 1em
	border-top 1px solid #ccc
	p
		margin 0
		font-size .8em
		text-align center
		
	
// Helpers
.clearfix:before, .clearfix:after
	content " "
	display table

.clearfix:after
	clear: both
