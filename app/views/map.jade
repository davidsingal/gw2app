extends templates/layout

block stylesheets
	link(rel="stylesheet", href="http://cdn.leafletjs.com/leaflet-0.4.1/leaflet.css")
	// if lt IE 9
		link(rel="stylesheet", href="http://code.leafletjs.com/leaflet-0.4.1/leaflet.ie.cs")
	link(rel="stylesheet", href="/stylesheets/styles.css")
	link(rel="stylesheet", href="/stylesheets/map.css")
	
append header
	div(class="nav_tools")
		button(href="#draw", id="drawButton") #{lingua.draw}
		button(href="#tools", id="toolsButton") #{lingua.siege_weapons}

block content
	div(id="siegeTools", class="tools siege_weapons")
		button(class="icon", id="ram", data-dist="5", data-color="magenta") #{lingua.flame_ram}
		button(class="icon", id="catapult", data-dist="30", data-color="orange") #{lingua.catapult}
		button(class="icon", id="ballista", data-dist="27", data-color="yellow") #{lingua.ballista}
		button(class="icon", id="arrow", data-dist="35", data-color="cyan") #{lingua.arrow_cart}
		button(class="icon", id="trebuchet", data-dist="180", data-color="red") #{lingua.trebuchet}
		
	div(id="canvasTools", class="tools draw")
		div(class="color_nav clearfix")
			button(class="icon active", id="paint", title="") Paint
			button(class="icon", id="erase", title="") Erase
			button(class="icon", id="clear", title=lingua.clear) #{lingua.clear}
		div(class="color_nav clearfix")
			button(class="color", id="red") #{lingua.red}
			button(class="color", id="cyan") #{lingua.cyan}
			button(class="color", id="yellow") #{lingua.yellow}
			button(class="color", id="magenta") #{lingua.magenta}
			button(class="color last", id="white") #{lingua.white}
		
	div(id="map", class="full_map")
	
	canvas(id="canvas", class="draw_canvas", width="1000px", height="500px")
		p(class="disclaimer") #{lingua.no_canvas}
	
block javascripts
	script(src="http://cdn.leafletjs.com/leaflet-0.4.1/leaflet.js")
	script(src="/javascripts/libs/wax.leaf.min-6.2.3-touched.js")
	script(src="/javascripts/libs/cartodb-leaflet-min.js")
	script(src="/javascripts/libs/cartodb-popup-min.js")
	//script(src="/socket.io/socket.io.js")
	script
		var lang = "#{lang}";
	script(src="/javascripts/map.js")