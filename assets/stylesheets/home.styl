redColor = #dc241f
blackRedColor = #530406

sprite(x, y)
	background url(/images/assets/sprite.png) no-repeat x y

transition()
	-webkit-transition arguments
	-moz-transition arguments
	transition arguments

body
	font-size 62.5%
	font-family Helvetica, Arial, sans-serif
	
::-moz-selection
	background-color redColor
::selection
	background-color redColor

a:link, a:visited, a:active
	color #333
	text-decoration none
a:hover
	color redColor
	text-decoration underline
a:focus
	outline none
	
.logo
	position absolute
	width 100px
	height 20px
	margin 0
	top 10px
	left 20px
	z-index 5
	a
		display block
		width 100%
		height 100%
		color transparent
		text-indent -9999px
		sprite(-5px, -20px)
		
.lang_nav
	position absolute
	top 10px
	right 20px
	margin 0
	list-style none
	z-index 5
	li
		display inline
	a
		float left
		display block
		margin-left 10px
		font-size 1.2em
		
.home_nav
	position absolute
	top 30%
	left 50%
	margin-left -125px
	z-index 3
	a
		display block
		width 250px
		padding 15px 10px
		text-align center
		border 1px solid #ccc
		background #eee
		text-shadow 1px 1px 0 white
		font-size 1.4em
		&:hover
			color white
			text-decoration none
			background redColor
			border-color blackRedColor
			text-shadow 1px 1px 0 blackRedColor
			transition(all .3s ease-in-out)
			
.main_content
	position absolute
	width 100%
	height 100%
	background url(/images/home/norn-bg.jpg) no-repeat bottom
	background-size 100%
	overflow hidden
	.layer1
		position absolute
		width 100%
		height 30%
		bottom -30%
		background url(/images/home/norn-2.png) no-repeat bottom
		background-size 100%
		z-index 2
		&.active
			bottom 0
			transition(bottom 1s ease-in-out .3s)
	.layer2
		position absolute
		right -500px
		bottom 0
		width 500px
		height 400px
		background url(/images/home/norn-1.png) no-repeat top
		background-size 100%
		z-index 1
		&.active
			right 0
			transition(right .7s ease-in-out .7s)
		
.main_footer
	position absolute
	bottom 0
	width 100%
	text-align center
	color #eee
	z-index 5
	a
		font-size 1.2em
		color #eee
		text-shadow 0 0 5px #333