extends layout

block stylesheets
	link(rel="stylesheet", href="http://code.leafletjs.com/leaflet-0.3.1/leaflet.css")
	<!--[if lt IE 9]>link(rel="stylesheet", href="http://code.leafletjs.com/leaflet-0.3.1/leaflet.ie.cs")<![endif]-->
	link(rel="stylesheet", href="/stylesheets/cartodb-leaflet.css")
	link(rel="stylesheet", href="/stylesheets/map.css")

block viewport
	meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0")
	
append header
	div(class="tools_nav")
		button(href="#draw", id="drawButton") Dibujar
		button(href="#tools", id="toolsButton") Armas de asedio

block content
	div(id="map", class="full_map")
	div(id="tools", class="tools_map")
		button(class="icon", id="ram", data-dist="5", data-colour="magenta") Ariete
		button(class="icon", id="catapult", data-dist="30", data-colour="orange") Catapulta
		button(class="icon", id="ballista", data-dist="27", data-colour="yellow") Balista
		button(class="icon", id="arrow", data-dist="35", data-colour="cyan") Flechas
		button(class="icon", id="trebuchet", data-dist="180", data-colour="red") Trebuchet
	canvas(id="canvas", class="draw_canvas", width="1000px", height="500px")
		p(class="disclaimer") Parece que tu navegador no soporta Canvas, prueba con Chrome :)
	
block javascripts
	script(src="http://code.leafletjs.com/leaflet-0.3.1/leaflet.js")
	script(src="/javascripts/vendor/wax.leaf.min-6.2.3-touched.js")
	script(src="/javascripts/vendor/cartodb-leaflet-min.js")
	script(src="/javascripts/vendor/cartodb-popup-min.js")
	script(src="/javascripts/map.js")
	